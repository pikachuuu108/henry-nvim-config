{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod"
            ],
            "filetypes": [
                "go"
            ]
        }
    },
    "suggest.noselect": true,
    "hover.target": "float",
    "semanticTokens.enable": true,
    "suggest.virtualText": true,
    "diagnostic.virtualText": true,
    "go.goplsOptions": {
        "analyses": {
            "shadow": true,
            "printf": true,
            "unreachable": true,
            "undeclaredname": true
        },
        "semanticTokens": true
    },
    "snippets.ultisnips.pythonPrompt": false,
    "python.pythonPath": "~/.config/nvim/python_env.sh"
}
